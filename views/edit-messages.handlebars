    <div class="dashboard-content page-messages">
      <div class="container">
          <div class="row-fluid">
            <div class="col-md-12 page-title">
              <h4>Messages</h4>
              <p>Messages <i class="fas fa-chevron-right"></i> Edit Screen Messages </p>
            </div>

            <div class="col-md-12 page-content">
              <div class="page-messages--edit">
                <div class="col-md-6">
                  <h3>{{messages.screen_title}}</h3>
                  <img src="image/messages-screen-{{messages.page}}.png">
                </div>

                <div class="col-md-6">
                  <a class="btn btn-primary-round float-right edit-message"><i class="far fa-edit"></i> Edit</a>
                  <a class="btn btn-success-round float-right action-btn-message update-message disabled" style="display: none;">Save</a>
                  <a href="messages" class="btn btn-cancel-round float-right action-btn-message cancel-message" style="display:none;">Cancel</a>
                  <textarea class="form-control message-content" onkeyup="contentKeyup('message-content');" id="{{messages.content}}" maxlength="60" disabled>{{messages.content}}</textarea>
                  <div style="text-align:left;" class="feedback message-content_s">Character/s Remaining: 60</div>
                </div>
                
              </div>
          </div>
      </div>
    </div>
    
    <div class="modal fade" id="updatemessage" tabindex="-1" role="dialog" aria-labelledby="updatemessage" data-backdrop="static" data-keyboard="false" aria-hidden="true">
        <div class="modal-dialog modal-md">
          <div class="modal-content">
            <div class="modal-body">
              <div class="spinner-border text-danger" role="status">
                <span class="sr-only">Loading...</span>
              </div>

              <h2>Saving..</h2>
              <p>Please wait.</p>

            </div>
          </div>
        </div>
      </div>