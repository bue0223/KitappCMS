 <body class="login">
     <main role="main" class="container-fluid no-gutters">
     	<div class="col-md-12 no-gutters">
     		<div class="row">
		        <div class="col-md-5 login-bg"></div>

		        <div class="col-md-7 login-form">
		        	<h3>Forgot your password?</h3>
		        	<p>Enter your email address to Reset your Password</p>
		        	 <!-- Alert Messages -->
					<div class="alert alert-success" id="success_send_reset_link" role="alert" style="display: none;">
						Please check your mailbox. We've sent you an email with a link to reset your password.
						<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					  		<span aria-hidden="true">&times;</span>
						</button>
					</div>

		        	<form>
		        		<!-- add class is-valid for error -->
		        		<input type="email" class="form-control" id="email_forgot_password" placeholder="Email Address" required>
		        		<div class="invalid-feedback" id="if_forgot_password">
				          Invalid email address
				        </div>

		        		<a class="btn btn-primary-round disabled" id="send_reset_link">Send Password Reset Link</a>
		        		<a href="/"><i class="fas fa-long-arrow-alt-left"></i> Back to Homepage</a>

		        	</form>
					<div class="footer">
				 		<p>Copyright Â© 2019 PMFTC-KitApp. All rights reserved. 
				 		<a href="privacy-policy">Privacy Policy</a> | 
				 		<a href="terms-conditions">Terms and Conditions</a>
			 		</div>
		        </div>
	 		</div>  
     	</div>
