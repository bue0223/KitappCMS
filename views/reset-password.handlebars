 <body class="login">
     <main role="main" class="container-fluid no-gutters">
     	<div class="col-md-12 no-gutters">
     		<div class="row">
		        <div class="col-md-5 login-bg"></div>

		        <div class="col-md-7 login-form">
		        	<h3>Reset Password</h3>
		        	<p>Enter your new password.</p>
		        	 <!-- Alert Messages -->
					<div class="alert alert-success" id="success_reset_password" role="alert" style="display: none;">
						Your password has been reset successfully!
						<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					  		<span aria-hidden="true">&times;</span>
						</button>
					</div>

		        	<form>
						<div class="form-group">
		        		<input type="password" class="form-control reset_pass_inputs" id="new_password" placeholder="New Password" required>
						<div class="feedback" style="text-align:left;padding-left: 25px;">
				          Password must contain a lowercase letter, uppercase letter and number. Min 8 characters.
				        </div>
						</div>
						<div class="form-group">
				       	<input type="password" class="form-control reset_pass_inputs" id="confirm_password" placeholder="Confirm Password" required>
		        		<div class="feedback f_confirm_password" style="text-align:left;padding-left: 25px;">
				          Password must contain a lowercase letter, uppercase letter and number. Min 8 characters.
				        </div>
						</div>
		        		<a class="btn btn-primary-round reset_pass_btn disabled" id="reset_password_btn">Reset Password</a>
		        		<a href="/" class="reset_pass_btn disabled"><i class="fas fa-long-arrow-alt-left "></i> Back to Homepage</a>

		        	</form>
